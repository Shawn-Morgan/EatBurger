<h1>Eat Da Burger!</h1>

<h2>New burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2 class="text-center ml-5">Burgers devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<div class="text-center ml-5">
  <div class="card text-center">
    <h2 class="text-center ml-5">Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <action="/burgers/create" method="POST">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>
      <button class="btn btn-primary" type="submit">Add a New Burger!</button>
    </form>
  </div>
</div>

